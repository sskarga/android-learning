<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEM"
        style="@style/itemTextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewAdd" />

    <ImageView
        android:id="@+id/imageViewAdd"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSubstract"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_square_icon" />

    <ImageView
        android:id="@+id/imageViewSubstract"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/square_subtract_icon" />

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="26sp"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTitle"
        app:layout_constraintEnd_toStartOf="@+id/imageViewAdd"
        app:layout_constraintStart_toEndOf="@+id/textViewTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>